<?xml version="1.0" encoding="utf-8"?>
<odoo>
 
    <record id="view_alumno_tree" model="ir.ui.view">
        <field name="name">alumno.list</field>
        <field name="model">bebidas_alumno.castelao</field>
        <field name="arch" type="xml">
            <list>
                <field name="nombre"/>
                <field name="nivel_sueno"/>
                <field name="bebida_recomendada"/>
            </list>
        </field>
    </record>
  
    <record id="view_alumno_form" model="ir.ui.view">
        <field name="name">alumno.form</field>
        <field name="model">bebidas_alumno.castelao</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="nivel_sueno"/>
                        <field name="bebida_recomendada"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_alumno" model="ir.actions.act_window">
        <field name="name">Alumnos</field>
        <field name="res_model">bebidas_alumno.castelao</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_bebidas_root" name="Bebidas Castelao"/>

    <menuitem id="menu_alumno" name="Alumnos" parent="menu_bebidas_root" action="action_alumno"/>
</odoo>